                {
                    "type": "ValidationTextBox",
                    "caption": "ClientID",
                    "name": "ClientID"
                },
                {
                    "type": "PasswordTextBox",
                    "caption": "ClientSecret",
                    "name": "ClientSecret"
                }
            ]
        },
        {
            "type": "RowLayout",
            "items": [
                {
                    "type": "Button",
                    "caption": "Authenticate",
                    "onClick": "TRON_AuthenticateUser($id, $ClientID, $ClientSecret);"
                },
                {
                    "type": "Label",
                    "caption": "",
                    "name": "AuthStatus"
                }
            ]
        },
        {
            "type": "NumberSpinner",
            "name": "QueryInterval",
            "caption": "Query Interval",
            "minimum": 0,
            "suffix": "seconds"
        },
        {
            "type": "List",
            "name": "CarIDs",
            "add": true,
            "delete": true,
            "columns": [
                {
                    "add": "",
                    "caption": "Car Name",
                    "name": "CarName",
                    "edit": {
                        "type": "ValidationTextBox"
                    },
                    "width": "auto"
                },
                {
                    "add": "",
                    "caption": "Car ID",
                    "name": "CarID",
                    "edit": {
                        "type": "ValidationTextBox"
                    },
                    "width": "200px"
                },
                {
                    "add": "",
                    "caption": "Status",
                    "name": "Status",
                    "width": "100px"
                }
            ]
        }
    ],
    "actions": [
        {
            "type": "Button",
            "caption": "Fetch Last Recorded Data",
            "onClick": "TRON_RequestLastRecords($id);"
        },
        {
            "type": "List",
            "name": "AvailableCarIDs",
            "rowCount": 5,
            "add": false,
            "delete": false,
            "columns": [
                {
                    "caption": "CarID",
                    "name": "CarID",
                    "width": "auto"
                }
            ]
        },
        {
            "type": "RowLayout",
            "items": [
                {
                    "type": "Button",
                    "caption": "Fetch available Vehicles",
                    "onClick": "TRON_FetchAvailableCars($id);"
                },
                {
                    "type": "Label",
                    "caption": "",
                    "name": "TotalIDs"
                }
            ]
        }
    ],
    "status": [
        {
            "code": 200,
            "icon": "error",
            "caption": "Unexpected Error"
        },
        {
            "code": 203,
            "icon": "error",
            "caption": "The server experienced an unexpected error"
        },
        {
            "code": 204,
            "icon": "error",
            "caption": "The credentials are not valid"
        }
    ]
